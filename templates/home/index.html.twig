{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="navigationBar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2 offset-md-1 ">
                    <a href="/" class="nav-link">Главная</a>
                    <div class="row">
                        <div class="col"><a href="/" class="nav-link">ИЗО</a></div>
                        <div class="w-100"></div>
                        <div class="col"><a href="/" class="nav-link">Лепка</a></div>
                        <div class="w-100"></div>
                        <div class="col"><a href="/" class="nav-link">Иностранный</a></div>
                        <div class="w-100"></div>
                    </div>
                </div>
                <div class="col-sm-7 offset-md-1">

                    {% for news in news %}

                        <div class="row">
                            <div class="col-lg-4">
                                <a href="/"><img class="img-responsive img-rounded img-right float-left img-fluid" src="{{ news.image }}"></a>
                            </div>
                                <div>
                                    <h4>{{ news.title }}</h4>
                                    {{ news.content }}
                                </div>
                            <div class="row">{{ news.author }}</div>
                        </div>

                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
